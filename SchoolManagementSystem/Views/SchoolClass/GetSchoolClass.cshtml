@model SchoolClassViewModel

@{
    ViewData["Title"] = "School Classes";
}

<div class="container py-5">

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center fw-bold mb-4">Add New Class</h3>
                    <form asp-controller="SchoolClass" asp-action="AddClass" method="post">
                        <div class="mb-3">
                            <label asp-for="Class.Name" class="form-label fw-semibold">
                                Class Name
                            </label>
                            <input asp-for="Class.Name" class="form-control form-control-lg" placeholder="Enter class name" />
                            <span asp-validation-for="Class.Name" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Add Class</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Classes is not null && Model.Classes.Any())
    {
        <div class="row mt-5">
            <div class="col">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Existing Classes</h5>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Class Name</th>
                                        <th>Operation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (School_Class schoolClass in Model.Classes)
                                    {
                                        <tr>
                                            <td>@schoolClass.Id</td>
                                            <td>@schoolClass.Name</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h2>No Classes to Show</h2>
    }
</div>