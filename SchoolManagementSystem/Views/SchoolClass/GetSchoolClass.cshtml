@model SchoolClassViewModel

@{
    ViewData["Title"] = "School Classes";
}

<div class="container py-5">
    @* -----------Success Message Starts----------- *@
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @* ------------Success Message Ends------------ *@
    @* -----------Error Summary Starts----------- *@
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <h6>Please fix the following errors:</h6>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        </div>
    }
    @* ------------Error Summary Ends------------ *@
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center fw-bold mb-4">Add New Class</h3>
                    <form asp-controller="SchoolClass" asp-action="AddClass" method="post">
                        <div class="mb-3">
                            <label asp-for="Class.Name" class="form-label fw-semibold">
                                Class Name
                            </label>
                            <input asp-for="Class.Name" class="form-control form-control-lg" placeholder="Enter class name" />
                            <span asp-validation-for="Class.Name" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Add Class</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Classes is not null && Model.Classes.Any())
    {
        <div class="row mt-5">
            <div class="col">
                <div class="card shadow-sm border-0 rounded-4">
                    <div class="card-body p-4">
                        <h5 class="fw-bold mb-3">Existing Classes</h5>
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Class Name</th>
                                        <th>Operation</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (School_Class schoolClass in Model.Classes)
                                    {
                                        <tr>
                                            <td>@schoolClass.Id</td>
                                            <td>
                                                @if (Model.EditingId == @schoolClass.Id)
                                                {
                                                    <form asp-controller="SchoolClass" asp-action="Update" method="post" class="d-flex align-items-center justify-content-center">
                                                        <input asp-for="Class.Name" class="form-control form-control-lg" placeholder="New class name" required />
                                                        <span asp-validation-for="Class.Name" class="text-danger"></span>
                                                        <input type="hidden" asp-for="Class.Id" />
                                                        <button type="submit" class="btn btn-sm btn-primary ms-2">Update</button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    @schoolClass.Name
                                                }
                                            </td>
                                            <td>
                                                @if (Model.EditingId == @schoolClass.Id)
                                                {
                                                    <a asp-action="GetSchoolClass" class="btn btn-sm btn-secondary">Cancel</a>
                                                }
                                                else
                                                {
                                                    <a asp-action="GetSchoolClass" asp-route-editingId="@schoolClass.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <h2>No Classes to Show</h2>
    }
</div>
